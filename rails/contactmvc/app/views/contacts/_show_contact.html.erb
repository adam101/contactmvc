<div class="contact">
    <%= form_tag("/contacts/" + contact.id.to_s, method: :delete, :remote => true) do %>
        <table class="contact_table">
            <caption>HEADER</caption>
            <tbody>
                <tr>
                    <td rowspan="0">IMAGE HERE</td>
                </tr>
                <tr>
                    <td>
                        <%= label_tag :name, nil, class: "small_label" %> <%= contact.name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= label_tag :age, nil, class: "small_label" %> <%= contact.age %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= label_tag :address, nil, class: "small_label" %> <%= contact.address %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= label_tag :phone, nil, class: "small_label" %> <%= contact.phone %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= label_tag :email, nil, class: "small_label" %> <%= contact.email %>
                    </td>
                </tr>
            </tbody>
        </table>
        <%= submit_tag "Delete" %>
    <% end %>
</div>